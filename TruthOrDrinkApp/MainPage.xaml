<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkApp.MainPage"
             Title="Truth Or Drink">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <!-- Welkomsttekst -->
        <Label x:Name="WelcomeLabel"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="DarkBlue" />

        <Label Text="Truth Or Drink"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Logout"
                FontSize="18"
                Clicked="OnLogoutButtonClicked" />

        <Button Text="Nieuw spel"
                FontSize="18"
                Clicked="OnNewGameButtonClicked" />

        <Button Text="Vragen aanmaken"
                FontSize="18"
                Clicked="OnCreateQuestionsButtonClicked" />

        <Button Text="Open Database Browser" Clicked="OpenDatabaseBrowser" />
    </StackLayout>
</ContentPage>
