<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkApp.ChooseQuestionCategoryPage"
             Title="Selecteer vraag categorieen:">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Titel -->
            <Label Text="Selecteer vraag categorieen:"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Categorieen -->
            <VerticalStackLayout Spacing="10">
                <!-- Happy Hour -->
                <HorizontalStackLayout>
                    <CheckBox x:Name="HappyHourCheckBox" />
                    <Label Text="Happy Hour: Voor als je hulp nodig hebt om aardig te zijn. Leer je kennissen beter kennen."
                           FontSize="14"
                           WidthRequest="300"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- On the Rocks -->
                <HorizontalStackLayout>
                    <CheckBox x:Name="OnTheRocksCheckBox" />
                    <Label Text="On the Rocks: Maak het persoonlijker met deze vragen voor goede vrienden, die precies de juiste pit hebben."
                           FontSize="14"
                           WidthRequest="300"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Last Call -->
                <HorizontalStackLayout>
                    <CheckBox x:Name="LastCallCheckBox" />
                    <Label Text="Last Call: Indringende vragen over je diepste en donkerste vriendschappen."
                           FontSize="14"
                           WidthRequest="300"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Extra Vies -->
                <HorizontalStackLayout>
                    <CheckBox x:Name="ExtraViesCheckBox" />
                    <Label Text="Extra Vies: Extreem pittige vragen zorgen ervoor dat je veel meer leert dan je zou moeten."
                           FontSize="14"
                           WidthRequest="300"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Volgende knop -->
            <Button Text="Volgende"
                    FontSize="18"
                    Clicked="OnNextButtonClicked"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
